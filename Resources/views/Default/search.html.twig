{% if vivait_search_path is defined %}
<form id="header-search" class="navbar-form navbar-right" style="width:200px;"
			action="{{ path(vivait_search_path }}" method="get">
	<div class="input-group">
		<input class="form-control" type="text" id="nav-searchbox" name="query" placeholder="Search..."
					 value="{{ app.request.get('query') }}">
		<span class="input-group-btn">
			<button class="btn btn-default" type="submit">
				<i class="glyphicon glyphicon-search"></i>
			</button>
		</span>
	</div>
</form>
{% endif %}